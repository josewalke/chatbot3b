# ========================================
# CONFIGURACIÓN DEL CHATBOT INTELIGENTE
# ========================================

# Configuración de la aplicación
APP_NAME=Chatbot Inteligente
APP_VERSION=1.0.0
DEBUG=True

# Base de datos
DATABASE_URL=sqlite:///./chatbot.db

# ========================================
# CONFIGURACIÓN DE OPENAI (IA)
# ========================================
# Obtener en: https://platform.openai.com/api-keys
OPENAI_API_KEY=tu-openai-api-key-aqui
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7

# ========================================
# CONFIGURACIÓN DE PAGOS - STRIPE
# ========================================
# Obtener en: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_tu-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_tu-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_tu-stripe-webhook-secret

# ========================================
# CONFIGURACIÓN DE PAGOS - PAYPAL
# ========================================
# Obtener en: https://developer.paypal.com/
PAYPAL_CLIENT_ID=tu-paypal-client-id
PAYPAL_CLIENT_SECRET=tu-paypal-client-secret
PAYPAL_MODE=sandbox  # Cambiar a 'live' para producción

# ========================================
# CONFIGURACIÓN DE REDES SOCIALES
# ========================================

# Telegram Bot
# Crear bot con @BotFather en Telegram
TELEGRAM_BOT_TOKEN=tu-telegram-bot-token

# Facebook Messenger
# Obtener en: https://developers.facebook.com/
FACEBOOK_PAGE_ACCESS_TOKEN=tu-facebook-page-access-token
FACEBOOK_VERIFY_TOKEN=tu-facebook-verify-token

# WhatsApp Business
# Obtener en: https://business.whatsapp.com/
WHATSAPP_BUSINESS_TOKEN=tu-whatsapp-business-token
WHATSAPP_PHONE_NUMBER_ID=tu-whatsapp-phone-number-id

# Instagram (opcional)
INSTAGRAM_ACCESS_TOKEN=tu-instagram-access-token

# ========================================
# CONFIGURACIÓN DE EMAIL
# ========================================
# Para enviar notificaciones y confirmaciones
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-email-app-password
SMTP_USE_TLS=True

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================
# Generar una clave secreta segura
SECRET_KEY=tu-secret-key-muy-seguro-y-largo-aqui
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================
LOG_LEVEL=INFO
LOG_FILE=chatbot.log

# ========================================
# CONFIGURACIÓN DE HORARIOS
# ========================================
# Horarios de atención (opcional)
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=17:00
BUSINESS_DAYS=1,2,3,4,5  # Lunes a Viernes

# ========================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ========================================
# Email de contacto para escalaciones
ADMIN_EMAIL=admin@tu-dominio.com
ADMIN_PHONE=+1234567890

# ========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ========================================
# Cambiar a False en producción
DEBUG=False

# URL del servidor
SERVER_URL=https://tu-dominio.com

# Configuración de CORS
ALLOWED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com

# ========================================
# CONFIGURACIÓN AVANZADA
# ========================================

# Límite de mensajes por usuario
MAX_MESSAGES_PER_USER=1000

# Tiempo de expiración de sesión (horas)
SESSION_EXPIRY_HOURS=24

# Configuración de caché
CACHE_ENABLED=True
CACHE_TTL=3600

# Configuración de rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================
# Integración con servicios de monitoreo
SENTRY_DSN=tu-sentry-dsn
GOOGLE_ANALYTICS_ID=tu-ga-id

# ========================================
# CONFIGURACIÓN DE BACKUP
# ========================================
# Configuración de respaldos automáticos
BACKUP_ENABLED=True
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# ========================================
# INSTRUCCIONES
# ========================================

# 1. Copia este archivo como .env
# 2. Reemplaza todos los valores con tus configuraciones reales
# 3. NUNCA subas el archivo .env al repositorio
# 4. Mantén las claves seguras y no las compartas

# Para obtener las API keys:
# - OpenAI: https://platform.openai.com/api-keys
# - Stripe: https://dashboard.stripe.com/apikeys
# - PayPal: https://developer.paypal.com/
# - Telegram: Habla con @BotFather
# - Facebook: https://developers.facebook.com/
# - WhatsApp: https://business.whatsapp.com/

# ========================================
# EJEMPLO DE CONFIGURACIÓN MÍNIMA
# ========================================
# Para empezar rápidamente, solo necesitas:

# OPENAI_API_KEY=sk-tu-openai-key
# SECRET_KEY=tu-secret-key
